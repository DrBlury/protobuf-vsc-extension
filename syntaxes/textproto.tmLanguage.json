{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Protocol Buffers Text Format",
  "scopeName": "source.textproto",
  "patterns": [
    { "include": "#comments" },
    { "include": "#field" },
    { "include": "#message" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#brackets" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.textproto",
          "match": "#.*$"
        }
      ]
    },
    "field": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": { "name": "variable.other.field.textproto" }
          }
        },
        {
          "match": "\\[([a-zA-Z_][a-zA-Z0-9_.]*(?:/[a-zA-Z_][a-zA-Z0-9_.]*)?)\\]\\s*:",
          "captures": {
            "1": { "name": "entity.name.type.extension.textproto" }
          }
        },
        {
          "match": "\\[([a-zA-Z_][a-zA-Z0-9_.]*(?:/[a-zA-Z_][a-zA-Z0-9_.]*)?)\\]",
          "captures": {
            "1": { "name": "entity.name.type.extension.textproto" }
          }
        }
      ]
    },
    "message": {
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.block.begin.textproto" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.block.end.textproto" }
      },
      "patterns": [
        { "include": "#comments" },
        { "include": "#field" },
        { "include": "#message" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#constants" },
        { "include": "#brackets" }
      ]
    },
    "brackets": {
      "patterns": [
        {
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.array.begin.textproto" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.array.end.textproto" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#field" },
            { "include": "#message" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#constants" }
          ]
        },
        {
          "begin": "<",
          "end": ">",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.angle.begin.textproto" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.angle.end.textproto" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#field" },
            { "include": "#message" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#constants" },
            { "include": "#brackets" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.textproto",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.textproto",
              "match": "\\\\(?:[abfnrtv\\\\\"']|x[0-9A-Fa-f]{2}|[0-7]{1,3}|u[0-9A-Fa-f]{4}|U[0-9A-Fa-f]{8})"
            }
          ]
        },
        {
          "name": "string.quoted.single.textproto",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.textproto",
              "match": "\\\\(?:[abfnrtv\\\\\"']|x[0-9A-Fa-f]{2}|[0-7]{1,3}|u[0-9A-Fa-f]{4}|U[0-9A-Fa-f]{8})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.textproto",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.octal.textproto",
          "match": "\\b0[0-7]+\\b"
        },
        {
          "name": "constant.numeric.float.textproto",
          "match": "\\b-?\\d+\\.\\d+(?:[eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.float.textproto",
          "match": "\\b-?\\d+[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.textproto",
          "match": "\\b-?\\d+\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.textproto",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.textproto",
          "match": "\\b(null)\\b"
        },
        {
          "name": "constant.language.float.textproto",
          "match": "\\b(inf|-inf|nan)\\b"
        },
        {
          "name": "constant.language.enum.textproto",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        }
      ]
    }
  }
}
