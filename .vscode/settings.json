{
  "protobuf.includes": [
    "${workspaceFolder}/examples/buf/.buf-deps",
    "${workspaceFolder}/examples/regressions/buf-workspace-imports/proto/.buf-deps"
  ],
  "protobuf.formatter.alignFields": true,
  // Use buf linter instead of protoc
  "protobuf.externalLinter.enabled": true,
  "protobuf.externalLinter.linter": "buf",
  "protobuf.externalLinter.runOnSave": true,

  // Code generation on save
  "protobuf.codegen.generateOnSave": false,
  "protobuf.codegen.tool": "buf",

  // Renumber settings
  "protobuf.renumber.onFormat": true,
  "protobuf.renumber.startNumber": 1,
  "protobuf.renumber.increment": 1,
  "protobuf.renumber.preserveReserved": true,
  "protobuf.renumber.skipInternalRange": true,

  // Diagnostics - enable all checks
  "protobuf.diagnostics.enabled": true,
  "protobuf.diagnostics.fieldTagChecks": true,
  "protobuf.diagnostics.duplicateFieldChecks": true,
  "protobuf.diagnostics.namingConventions": true,
  "protobuf.diagnostics.referenceChecks": true,
  "protobuf.diagnostics.importChecks": true,
  "protobuf.diagnostics.useBuiltIn": true,
  // Parser selection
  // "protobuf.parser": "tree-sitter",

  // Formatter settings
  "protobuf.formatter.enabled": true,
  "protobuf.formatter.preset": "minimal",
  "protobuf.formatter.preserveMultiLineFields": true,
  "protobuf.formatOnSave": true,
  "protobuf.clangFormat.enabled": false,
  "protobuf.clangFormat.configPath": "${workspaceFolder}/examples/regressions/clang-format-config/.clang-format",

  // Debug and verbose logging
  "protobuf.debug.verboseLogging": true,
  "protobuf.debug.logLevel": "verbose",

  "typescript.tsdk": "node_modules/typescript/lib",
  "files.exclude": {
    "out": false
  },
  "search.exclude": {
    "out": true
  },
  "typescript.tsc.autoDetect": "off",
  "protobuf.protoc.path": "/opt/homebrew/bin/protoc",
  "protobuf.buf.path": "/opt/homebrew/bin/buf",
  "protobuf.externalLinter.bufPath": "/opt/homebrew/bin/buf",
  "protobuf.grpcurl.path": "grpcurl",
  "cSpell.enabled": false
  // "protobuf.semanticHighlighting.enabled": "textmate"
  // "editor.semanticTokenColorCustomizations": {
  //   "[*]": {
  //     "enabled": true
  //   }
  // }
}
